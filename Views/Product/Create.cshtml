@model DotNetMVCEFCode.Models.AddProduct
<h1>Add Product</h1>
<form method="post" class="w-75 mx-auto">
    <div class="mb-3">
        <label for="Name" class="form-label">Please Enter Product Name:</label>
        <input type="text" class="form-control" id="Name" asp-for="Name" />
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label">Please Enter Product Description:</label>
        <input type="text" class="form-control" id="Description" asp-for="Description" />
    </div>
    <div class="mb-3">
        <label for="Price" class="form-label">Please Enter Product Price:</label>
        <input type="number" step="0.5" class="form-control" id="Price" asp-for="Price" />
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-primary d-block mx-auto" value="Save" />
    </div>
</form>